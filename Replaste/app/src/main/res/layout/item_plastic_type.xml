<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="16dp"
    app:strokeColor="@color/outline_color"
    app:strokeWidth="1dp"
    app:cardBackgroundColor="@color/background_surface">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivPlasticIcon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@color/primary_green_light"
            android:padding="12dp"
            android:scaleType="centerInside"
            app:shapeAppearanceOverlay="@style/CircularImageStyle"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@+id/tvPlasticName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Nama Plastik"
            android:textSize="18sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/replaste_text_primary"
            android:layout_marginStart="12dp"
            android:maxLines="1"
            android:ellipsize="end"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivPlasticIcon"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tvPlasticDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="PET adalah plastik yang sering digunakan untuk botol minuman dan wadah makanan karena sifatnya yang kuat dan ringan."
            android:fontFamily="@font/poppins_regular"
            android:textColor="@color/replaste_text_secondary"
            android:layout_marginTop="4dp"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="14sp"
            app:layout_constraintTop_toBottomOf="@id/tvPlasticName"
            app:layout_constraintStart_toStartOf="@id/tvPlasticName"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>